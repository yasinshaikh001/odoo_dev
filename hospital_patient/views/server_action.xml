<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="action_patient_action" model="ir.actions.server">
            <field name="name">Patient Server Action</field>
            <field name="model_id" ref="hospital_patient.model_hospital_patient"/>
            <field name="state">code</field>
            <field name="code">
                action = model.action_patients()
            </field>
        </record>

        <menuitem id="hospital_patient_server_action_menu" 
                name="Server Action" 
                parent="hospital_root"
                action="action_patient_action"/>
    </data>
</odoo>