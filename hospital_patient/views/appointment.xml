<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="appointment_pivot" model="ir.ui.view">
        <field name="name">hospital.appointment.pivot</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <pivot string="Appointment">
                <field name="doctor_id" type="row"/>
                <field name="appointment_date" type="col" interval="day"/>
            </pivot>
        </field>
    </record>
    
    <record id="appointment_calendar" model="ir.ui.view">
            <field name="name">hospital.appointment.calendar</field>
            <field name="model">hospital.appointment</field>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <calendar string="Appointment Calendar View" date_start="appointment_date" color="patient_id" mode="month" quick_add="False">
                    <field name="name"/>
                    <field name="patient_id"/>
                </calendar>
            </field>
    </record>
    
    <record id="appointment_graph" model="ir.ui.view">
        <field name="name">hospital.appointment.graph</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <graph string="Appointment graph" type="pie">
                <field name="patient_id"/>
                <field name="amount" operator="+" type='measure'/>
            </graph>
        </field>
    </record>
    


        <!--tree view of the patient model-->
    <record id="appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Appointment" banner_route="/om_hospital/appointments" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'" 
                                        decoration-success="state == 'done'" decoration-warning="state=='confirm'">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="patient_age" avg="Average of Ages"/>
                <field name="appointment_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!--form view of the appointment model-->
    <record id="appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointments">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" states='draft' class="oe_highlight"/>
                    <button name="action_done" type="object" string="Done" states='confirm' class="oe_highlight"/>
<!--                                type="object" groups="account.group_account_invoice"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>-->
                    <button name="test_recordset" type="object" string="Record set Operations" class="oe_highlight"/>                                
                    <button name="delete_lines" type="object" string="Delete" class="oe_highlight"/>                        
                    <field name="state" statusbar_visible="draft,confirm,done" widget='statusbar'/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="patient_age"/>
                            <field name="doctor_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>                            
                            <field name="doctor_ids" widget="many2many_tags"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="appointment_date" options='{"datepicker": {"daysOfWeekDisabled": [0, 6]}}'/>
                            <field name="appointment_date_end" />
                            <field name="appointment_datetime"/>
                            <field name="partner_id"/>                                                        
                            <field name="order_id"/>    
                            <field name="product_id"/>                                                    
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                    <notebook>
                        <page string="Doctor Prescription">
                            <field name="appointment_lines" editable="bottom">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>                                                        
                                    <field name="product_qty"/>                                                        
                                    <field name="appointment_id" invisible="1"/>                                                        
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id"/>                                                        
                                        </group>
                                        <group>
                                            <field name="product_qty"/>                                                        
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Pharmacy">
                            <field name="pharmacy_note"/>                                                        
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>    
        

        <!--action of the appointment menu-->
    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">calendar,tree,form,pivot,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your First Appointment !
          </p>
        </field>
    </record>
    
    
    <menuitem id="hospital_appointment" name="Appointments" parent="hospital_root"
              action="action_appointment" sequence="30"/>
    

</odoo>
